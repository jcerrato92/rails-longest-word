
<div class="container">
<h1>New game</h1>
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col m-3 p-4 border shadow-sm text-center bg-info text-white fw-bolder fs-3" style="font-family: 'Times New Roman', Times, serif"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p>What is the longest word you can find?</p>
    <input type="text" style="width: 95%" name="word">
    <input type="submit" value="Play">
  </form>
</div>
